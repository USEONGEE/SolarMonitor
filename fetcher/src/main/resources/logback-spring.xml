<configuration>
    <!-- 로그 파일이 저장될 디렉터리 경로 설정 -->
    <property name="LOG_PATH" value="logs"/>
    <!-- 현재 날짜를 변수에 저장 (예: 2025-04-05) -->
    <timestamp key="currentDate" datePattern="yyyy-MM-dd"/>

    <!-- ERROR와 WARN 로그만 기록하는 파일 -->
    <appender name="FILE_ERR_WARN" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 파일 이름에 날짜를 포함 -->
        <file>${LOG_PATH}/error_warn-${currentDate}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 매일 새로운 파일 생성, 최대 30일 보관 -->
            <fileNamePattern>${LOG_PATH}/error_warn-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <!-- ThresholdFilter는 WARN 이상만 통과 -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
            <!-- 한글 로그 깨짐 방지를 위해 UTF-8 인코딩 사용 -->
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- WARN 미만의 나머지 로그 (INFO, DEBUG, TRACE 등) 기록하는 파일 -->
    <appender name="FILE_OTHER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/other-${currentDate}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/other-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <!-- LevelFilter를 사용하여 WARN 이상은 제외 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>DENY</onMatch>
            <onMismatch>ACCEPT</onMismatch>
        </filter>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 모든 로그를 두 개의 파일에 동시에 기록 -->
    <root level="DEBUG">
        <appender-ref ref="FILE_ERR_WARN"/>
        <appender-ref ref="FILE_OTHER"/>
    </root>
</configuration>
